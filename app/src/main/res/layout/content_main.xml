                                android:layout_width="101dp"
                                android:layout_height="102dp"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/dining"/>

                            <TextView
                                android:id="@+id/housingNameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Mega Mart"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/resDescText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Juice Stand"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/resAddressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="UTech, beside COHS"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/upcomingEventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Upcoming Events"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <android.support.v7.widget.CardView
