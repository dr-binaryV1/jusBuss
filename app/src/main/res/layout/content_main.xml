                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/eventImageView"
                                android:layout_width="101dp"
                                android:layout_height="102dp"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/default_pic" />

                            <TextView
                                android:id="@+id/eventName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="AlgoRiddim"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/eventDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Admission: $1000"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Tickets Sold At: Students' Union"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/eventAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Fiction Night Club" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/event_ImageView"
                                android:layout_width="101dp"
                                android:layout_height="102dp"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/default_pic"/>

                            <TextView
                                android:id="@+id/housingtextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Party Over Here"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/eventDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Admission: $500"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Tickets Sold At: Students' Union"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/eventAddressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="UTech Barn"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/event_image"
                                android:layout_width="101dp"
                                android:layout_height="102dp"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/default_pic"/>

                            <TextView
                                android:id="@+id/housingTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Future"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/event_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Admission: $500"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Tickets Sold At: SCIT"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:id="@+id/event_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Utech Barn"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/featHousingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Featured Housing"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/houseImage"
                                android:layout_width="101dp"
                                android:layout_height="102dp"
                                android:layout_gravity="center_horizontal|center"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/housing_icon" />

                            <TextView
                                android:id="@+id/houseName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="John Williams"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/houseDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="123-8743"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/houseAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
