<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.damianwynter.jusbuss.ui.AddDiningActivity">
    <ImageView
        android:id="@+id/housing_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:srcCompat="@mipmap/housing_icon" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_below="@+id/housing_img"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <!--Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:text="NAME: "
                    android:textSize="20sp"
                    android:paddingRight="8dp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/housing_fname"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:text="Mike Myres"
                    android:fontFamily="sans-serif"
                    android:textSize="17sp"
                    android:layout_weight="17.35" />
                <!--
                <TextView
                    android:id="@+id/housing_lname"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="17sp"
                    android:hint="Last Name" />
                    -->
            </LinearLayout>
            <!--Phone-->
            <LinearLayout
                android:padding="@dimen/housing_padding_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Phone #: "
                    android:textSize="20sp"
                    android:paddingRight="8dp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/housing_phone"
                    android:layout_width="271dp"
                    android:layout_height="32dp"
                    android:ems="10"
                    android:text="+ 1876 555 1801"
                    android:textSize="17sp"/>
            </LinearLayout>
            <!--Price-->
            <LinearLayout
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Price:"
                    android:textSize="20sp"
                    android:paddingRight="8dp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/housing_price"
                    android:layout_width="303dp"
                    android:textSize="17sp"
                    android:text="$$$$"
                    android:layout_height="match_parent"
                    android:ems="10" />
            </LinearLayout>
            <!--Address-->
            <LinearLayout
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Address "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housing_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:textSize="17sp"
                    android:text="28 old hope road" />
            </LinearLayout>
            <!--Status-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:padding="@dimen/housing_padding_value"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Status "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housing_status"
                    android:layout_width="94dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="17sp"
                    android:hint="Available" />


            </LinearLayout>
            <!--Number of Occupants-->
            <LinearLayout
                android:tag="Occupants"
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Occupants"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/housing_numOccupancy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textSize="17sp"
                    android:hint="12"
                    />
            </LinearLayout>
            <!--Vacancy -->
            <LinearLayout
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Vacancy"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/housing_vacancy"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:ems="10"
                    android:textSize="17sp"
                    android:text="Yes" />

            </LinearLayout>
            <!--Longitude and latitude -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/housing_padding_value"
                android:orientation="horizontal">
                <TextView
                    android:text="Long : Lat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housing_long"
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Longitude"
                    />
                <!--
                <TextView
                    android:id="@+id/housing_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Latitude" />
                    -->
            </LinearLayout>
            <!--Description-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:padding="@dimen/housing_padding_value"
                android:layout_height="match_parent">
                <TextView
                    android:text="Description: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/housing_label_width"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housing_desc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:text="3 bedrooms 2 bathrooms and one door" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
