<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/entEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Search Category, eg. Party"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintRight_toLeftOf="@+id/menuSearchButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/menuSearchButton"
        android:layout_marginEnd="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ent_listRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/menuSearchButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/menuSearchButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Search"
        android:textColor="#FFFFFFFF"
        app:layout_constraintRight_toRightOf="@+id/ent_listRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="4dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/entFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add_floating_button"
        app:backgroundTint="#E71E62"
        app:fabSize="normal"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="23dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ent_listRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entEditText"
        app:layout_constraintVertical_bias="0.0"
        tools:background="@color/colorPrimary"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>